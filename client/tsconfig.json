{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/assets/*": ["app/assets/*"],

      "@/public/*": ["public/*"],

      "@/pages/*": ["app/pages/*"],

      "@/store/*": ["app/store/*"],

      "@/layout": ["app/layout/index"],
      "@/layout/*": ["app/layout/*"],

      "@/common": ["app/components/common/index"],
      "@/common/*": ["app/components/common/*"],

      "@/forms": ["app/components/forms/index"],
      "@/forms/*": ["app/components/forms/*"],

      "@/ui": ["app/components/ui/index"],
      "@/ui/*": ["app/components/ui/*"],

      "@/components/*": ["app/components/*"],

      "@/hooks": ["app/hooks/index"],
      "@/hooks/*": ["app/hooks/*"],

      "@/services": ["app/services/index"],
      "@/services/*": ["app/services/*"],

      "@/types": ["app/utils/types/index"],
      "@/types/*": ["app/utils/types/*"],

      "@/constants": ["app/utils/constants/index"],
      "@/constants/*": ["app/utils/constants/*"],

      "@/helpers": ["app/utils/helpers/index"],
      "@/helpers/*": ["app/utils/helpers/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../tailwind.config.js",
    "pages/_app.js"
, "app/utils/helpers/.helper.ts"  ],
  "exclude": ["node_modules"]
}
